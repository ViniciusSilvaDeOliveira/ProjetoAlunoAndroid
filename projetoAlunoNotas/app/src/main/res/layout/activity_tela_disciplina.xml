<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TelaDisciplina">

    <EditText
        android:id="@+id/edtTarefa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/btnInsert" />
    <Button
        android:id="@+id/btnInsert"
        android:layout_width="250px"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:text="@string/btnInsert" />

    <ListView
        android:id="@android:id/list"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/btnInsert"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="80dp"/>

    <Button
        android:id="@+id/btnVoltarInicial"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_below="@android:id/list"
        android:layout_alignParentStart="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="-70dp"
        android:text="Voltar"
        android:textSize="18sp"
        android:textColor="#000000"
        android:onClick="btnVoltar"/>

    <Button
        android:id="@+id/btnTelaNota"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_below="@android:id/list"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="-70dp"
        android:layout_marginEnd="50dp"
        android:text="AvanÃ§ar"
        android:textSize="18sp"
        android:textColor="#000000"
        android:onClick="btnTelaAprovado"/>

</RelativeLayout>